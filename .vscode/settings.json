{
	"search.exclude": {
		"**/dist": true
	},
	"files.exclude": {
		"**/node_modules": true,
		"**/*js.map": true,
		"**/*d.ts.map": true,
	},
	"editor.codeActionsOnSave": {
		"source.organizeImports": true,
		"source.fixAll.eslint": true,
		"source.format": true
	},
	"editor.formatOnSave": true,
	"diffEditor.wordWrap": "on",
	"editor.insertSpaces": false,
	"editor.wordWrap": "on",
	"editor.tabSize": 2,
	"prettier.configPath": "lib/package.json",
	"prettier.prettierPath": "lib/node_modules/prettier",
	"prettier.withNodeModules": true,
	"prettier.useEditorConfig": false
}