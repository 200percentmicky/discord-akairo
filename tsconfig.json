{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"outDir": "dist",
		"lib": [
			"esnext",
			"esnext.array",
			"esnext.asyncIterable",
			"esnext.intl",
			"esnext.symbol",
			"DOM"
		],
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"noImplicitOverride": true,
		"alwaysStrict": true,
		"noEmitHelpers": true,
		"declarationMap": true,
		"declaration": true,
		"declarationDir": "dist"
	},
	"include": ["src/**/*.ts", "test/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
