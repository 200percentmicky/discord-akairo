{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2021",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"useUnknownInCatchVariables": false,
		"alwaysStrict": true,
		"strict": true,
		"noImplicitOverride": true
	},
  "include": ["lib/src/**/*.ts"],
  "exclude": ["lib/node_modules", "lib/dist"]
}
